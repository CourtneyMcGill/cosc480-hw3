#main
  %h4= flash[:warning] if flash[:warning]
  %h3
    =precede "Product details for " do
      %span= @product.name
  %table.products_table
    %th Image
    %th Description
    %th Appropriate ages
    %th Price
    %tr
      %td= image_tag @product.image.url(:medium)
      %td= @product.description
      %td= @product.age_range
      %td#price= number_to_currency(@product.price)
  %tr
  %td= link_to "Edit product", edit_product_path
  %td= link_to "Back to product list", products_path
